<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ying.example.mybatis.StudentMapper">
    <select id="selectStudent" resultType="Student">
        select * from Student where id = #{id}
    </select>
    <select id="selectStudentByNameIfPresent" resultType="Student">
        select * from Student where
        <if test="name != null">
            name = #{name}
        </if>
    </select>
    <select id="selectStudentByNameIfPresentV2" resultType="Student">
        select * from Student
        <where>
            <if test="name != null">
                and name = #{name}
            </if>
        </where>

    </select>
    <select id="selectStudentByNameAndAge" resultType="Student">
        select * from Student
        <where>
            <if test="arg0 != null">
                and name = #{arg0}
            </if>
            <if test="arg1 != null">
                and age = #{arg1}
            </if>
        </where>
    </select>
    <select id="selectStudentByNameAndAgeV2" resultType="Student">
        select * from Student
        <where>
            <if test="name != null">
                and name = #{name}
            </if>
            <if test="age != null">
                and age = #{age}
            </if>
        </where>
    </select>
</mapper>